{
    "name": "components-vue",
    "description": "Library of vue components",
    "version": "1.0.0",
    "author": "digitro.com.br>",
    "license": "MIT",
    "private": true,
    "baseURL": "http://localhost:8080",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
        "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "lint": "eslint --ext .js,.vue src",
        "test-ui": "jest",
        "test-e2e": "testcafe firefox tests-e2e --app 'npm run dev' --app-init-delay 10000"
    },
    "dependencies": {
        "ramda": "^0.25.0",
        "vue": "^2.5.11"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-3": "^6.24.1",
        "cross-env": "^5.0.5",
        "css-loader": "^0.28.7",
        "eslint": "^5.7.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-html": "^4.0.6",
        "file-loader": "^1.1.4",
        "jest": "^23.6.0",
        "node-sass": "^4.5.3",
        "sass-loader": "^6.0.6",
        "testcafe": "^0.22.0",
        "testcafe-vue-selectors": "^3.0.0",
        "vue-loader": "^13.0.5",
        "vue-template-compiler": "^2.4.4",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.9.1"
    },
    "jest": {
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/ui-tests/"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
