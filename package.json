{
    "name": "dgt-vue-components",
    "description": "Library of DÃ­gitro vue components",
    "version": "1.0.0",
    "author": "digitro.com.br>",
    "license": "MIT",
    "private": true,
    "baseURL": "http://localhost:8080",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
        "prod": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "build:theme": "npm run lint && rm -rf dist/* && node node_modules/gulp/bin/gulp.js build",
        "lint": "eslint --ext .js,.vue src",
        "test-ui": "jest",
        "test-e2e": "testcafe firefox tests-e2e --app 'npm run dev' --app-init-delay 10000"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@vue/test-utils": "^1.0.0-beta.25",
        "babel-core": "^6.26.0",
        "babel-jest": "^23.6.0",
        "babel-loader": "^7.1.2",
        "babel-preset-stage-3": "^6.24.1",
        "cross-env": "^5.0.5",
        "css-loader": "^0.28.7",
        "eslint": "^5.7.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-html": "^4.0.6",
        "file-loader": "^1.1.4",
        "gulp": "^3.9.1",
        "gulp-vueify": "0.0.3",
        "jest": "^23.6.0",
        "jsonfile": "^5.0.0",
        "node-sass": "^4.5.3",
        "ramda": "^0.25.0",
        "sass-loader": "^6.0.6",
        "testcafe": "^0.22.0",
        "testcafe-vue-selectors": "^3.0.0",
        "vue": "^2.5.11",
        "vue-jest": "^3.0.0",
        "vue-loader": "^13.0.5",
        "vue-template-compiler": "^2.4.4",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.9.1",
        "chalk": "^1.1.3",
        "rollup": "^0.57.1",
        "rollup-plugin-postcss": "^1.6.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-vue": "^2.3.0",
        "rollup-plugin-uglify": "^3.0.0"
    },
    "jest": {
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/tests-e2e/"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "vue-jest"
        }
    }
}